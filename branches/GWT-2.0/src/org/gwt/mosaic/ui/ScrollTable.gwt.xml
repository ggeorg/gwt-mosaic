<!--                                                                        -->
<!-- This module is typically inherited via org.gwt.mosaic.ui.UI            -->
<!--                                                                        -->
<module>
	<inherits name='org.gwt.mosaic.override.Override' />
	<inherits name='com.google.gwt.gen2.table.FixedWidthTable' />

	<!-- IE uses a different implementation -->
	<replace-with
		class="org.gwt.mosaic.ui.client.table.AbstractScrollTable.ImplIE6">
		<when-type-is
			class="org.gwt.mosaic.ui.client.table.AbstractScrollTable.Impl" />
		<any>
			<when-property-is name="user.agent" value="ie6" />
			<when-property-is name="user.agent" value="ie8" />
		</any>
	</replace-with>
	<!-- Opera and Old Mozilla put the scrollbar on the left in RTL mode -->
	<replace-with
		class="org.gwt.mosaic.ui.client.table.AbstractScrollTable.ImplLeftScrollBar">
		<when-type-is
			class="org.gwt.mosaic.ui.client.table.AbstractScrollTable.Impl" />
		<when-property-is name="user.agent" value="opera" />
	</replace-with>
	<replace-with
		class="org.gwt.mosaic.ui.client.table.AbstractScrollTable.ImplLeftScrollBar">
		<when-type-is
			class="org.gwt.mosaic.ui.client.table.AbstractScrollTable.Impl" />
		<when-property-is name="user.agent" value="gecko" />
	</replace-with>

	<!-- Opera has a different MouseWorker implementation -->
	<replace-with
		class="org.gwt.mosaic.ui.client.table.AbstractScrollTable.MouseResizeWorkerOpera">
		<when-type-is
			class="org.gwt.mosaic.ui.client.table.AbstractScrollTable.MouseResizeWorker" />
		<when-property-is name="user.agent" value="opera" />
	</replace-with>
</module>
