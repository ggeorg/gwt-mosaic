<module>

	<!-- Inherit Mosaic Web Toolkit stuff.                          -->
	<inherits name='org.mosaic.ui.Mosaic' />

	<!-- Use a generator to create the source code                  -->
	<generate-with class="org.mosaic.ui.generator.MosaicGenerator">
		<when-type-assignable
			class="org.mosaic.ui.client.Mosaic.GeneratorInfo" />
	</generate-with>

	<!-- Specify the app entry point class.                         -->
	<entry-point class='org.mosaic.showcase.client.Showcase' />

	<!-- Specify the application specific style sheet.              -->
	<stylesheet src="MosaicShowcase.css" />

	<!-- Define the RPC service -->
	<servlet path="/datasource"
		class="org.mosaic.ui.server.DataSourceServiceImpl" />

</module>
