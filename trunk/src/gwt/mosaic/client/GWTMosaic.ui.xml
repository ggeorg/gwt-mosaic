<!-- HelloWidgetWorld.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:m='urn:import:gwt.mosaic.client.ui'>

	<ui:style>
		.box {
			padding: 10px;
			border: 4px solid blue;
			margin: 10px;
			
			min-width: 200px;
		}
		
		.box2 {	
			min-height: 200px;
			
			height: 200px;
		}
	</ui:style>

	<m:Box addStyleNames="{style.box}" fill="true">
		<m:Button addStyleNames="{style.box}">One</m:Button>
		<m:Button>Two</m:Button>
		<m:Button>Three</m:Button>
		<m:Button>Four</m:Button>

		<m:Box orientation="VERTICAL" addStyleNames=" {style.box2}" >
			<m:Button addStyleNames="{style.box}">One</m:Button>
			<m:Button>Two</m:Button>
			<m:Button>Three</m:Button>
			<m:Button>Four</m:Button>
		</m:Box>
	</m:Box>

</ui:UiBinder>