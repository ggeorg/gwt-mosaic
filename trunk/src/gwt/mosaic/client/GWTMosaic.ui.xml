<!-- HelloWidgetWorld.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:m='urn:import:gwt.mosaic.client.ui'>

	<ui:style>
		.pretty {
			background-color: skyblue;
			border: 2px solid blue;
			padding: 5px;
			margin: 5px;
		}
		
		.box {
			padding: 5px;
			border: 5px solid red;
			margin: 10px;
		}
		
		.m {
			min-width: 300px;
		}
	</ui:style>

	<m:Box ui:field="box1" fill="true" verticalAlignment="MIDDLE"
		horizontalAlignment="CENTER">
		<m:Button styleName="{style.m}">Button1</m:Button>
		<m:Button ui:field="button" weight="1">Click me!</m:Button>
		<m:Button weight="3">Button3</m:Button>
		<m:Box ui:field="box2" orientation="VERTICAL" fill="true"
			verticalAlignment="MIDDLE" horizontalAlignment="CENTER">
			<m:Button styleName="{style.m}">Button1</m:Button>
			<m:Button weight="1">Button2</m:Button>
			<m:Button weight="3">Button3</m:Button>
		</m:Box>
	</m:Box>

