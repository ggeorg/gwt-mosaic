<!-- HelloWidgetWorld.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:m='urn:import:gwt.mosaic.client.ui'>

	<ui:style>
		.box {
			padding: 0px;
			border: 5px solid blue;
			margin: 0px;
		}
		
		.box2 {
			
		}
	</ui:style>

	<m:Box addStyleNames="{style.box}" fill="false">
		<m:Button addStyleNames="{style.box2}">One</m:Button>
		<m:Button>Two</m:Button>
		<m:Button>Three</m:Button>
		<m:Button>Four</m:Button>

		<m:Box weight="1" orientation="VERTICAL" addStyleNames=" {style.box}"
			fill="false">
			<m:Button addStyleNames="{style.box2}">One</m:Button>
			<m:Button>Two</m:Button>
			<m:Button>Three</m:Button>
			<m:Button>Four</m:Button>

			<m:Box weight="1" addStyleNames=" {style.box}" fill="false">
				<m:Button addStyleNames="{style.box2}">One</m:Button>
				<m:Button>Two</m:Button>
				<m:Button>Three</m:Button>
				<m:Button>Four</m:Button>
			</m:Box>
		</m:Box>
	</m:Box>

</ui:UiBinder>