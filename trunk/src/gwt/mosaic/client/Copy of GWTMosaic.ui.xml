	<m:Table styleName="{style.box}">
		<m:Table.Column weight="1" />
		<m:Table.Row weight="1">
			<m:Form fill="false">
				<m:Form.Section>
					<m:Form.Field label="Name:">
						<m:HBox>
							<m:TextBox prompt="Last" value="Georgopoulos" />
							<m:TextBox prompt="First" />
						</m:HBox>
					</m:Form.Field>
				</m:Form.Section>
				<m:Form.Section>
					<m:Form.Field label="Home:">
						<m:VBox>
							<m:TextBox visibleLength="25" prompt="Street" />
							<m:HBox>
								<m:TextBox prompt="City" />
								<m:TextBox visibleLength="6" prompt="State" />
								<m:TextBox visibleLength="10" prompt="Zip" />
							</m:HBox>
						</m:VBox>
					</m:Form.Field>
					<m:Form.Field label="Work:">
						<m:VBox>
							<m:TextBox visibleLength="25" prompt="Street" />
							<m:HBox>
								<m:TextBox prompt="City" />
								<m:TextBox visibleLength="6" prompt="State" />
								<m:TextBox visibleLength="10" prompt="Zip" />
							</m:HBox>
						</m:VBox>
					</m:Form.Field>
				</m:Form.Section>
				<m:Form.Section heading="Phone Numbers">
					<m:Form.Field label="Home:">
						<m:TextBox />
					</m:Form.Field>
					<m:Form.Field label="Work:">
						<m:TextBox />
					</m:Form.Field>
				</m:Form.Section>
				<m:Form.Section heading="Email Addresses">
					<m:Form.Field label="Home:">
						<m:TextBox />
					</m:Form.Field>
					<m:Form.Field label="Work:">
						<m:TextBox />
					</m:Form.Field>
				</m:Form.Section>
			</m:Form>
		</m:Table.Row>
		<m:Table.Row>
			<m:Separator />
		</m:Table.Row>
		<m:Table.Row>
			<m:Table>
				<m:Table.Column weight="1" />
				<m:Table.Column />
				<m:Table.Row>
					<m:Span />
					<m:HBox horizontalAlignment="RIGHT" verticalAlignment="MIDDLE">
						<m:Button>Submit</m:Button>
					</m:HBox>
				</m:Table.Row>
			</m:Table>
		</m:Table.Row>
	</m:Table>

