<module>
	<replace-with
		class="org.mosaic.ui.client.impl.GlassPanelImplOpera">
		<when-type-is
			class="org.mosaic.ui.client.impl.GlassPanelImpl" />
		<when-property-is name="user.agent" value="opera" />
	</replace-with>

	<replace-with
		class="org.mosaic.ui.client.impl.GlassPanelImplSafari">
		<when-type-is
			class="org.mosaic.ui.client.impl.GlassPanelImpl" />
		<when-property-is name="user.agent" value="safari" />
	</replace-with>

	<replace-with
		class="org.mosaic.ui.client.impl.GlassPanelImplIE6">
		<when-type-is
			class="org.mosaic.ui.client.impl.GlassPanelImpl" />
		<when-property-is name="user.agent" value="ie6" />
	</replace-with>

	<replace-with
		class="org.mosaic.ui.client.impl.GlassPanelImplMozilla">
		<when-type-is
			class="org.mosaic.ui.client.impl.GlassPanelImpl" />
		<any>
			<when-property-is name="user.agent" value="gecko1_8" />
			<when-property-is name="user.agent" value="gecko" />
		</any>
	</replace-with>
</module>
