<module>

	<!-- Inherit Mosaic Web Toolkit stuff.                          -->
	<inherits name='org.gwt.mosaic.Mosaic' />
	<inherits name='org.gwt.mosaic.actions.Actions' />

	<!-- Inherit the default GWT style sheet.  You can change       -->
	<!-- the theme of your GWT application by uncommenting          -->
	<!-- any one of the following lines.                            -->
	<inherits name='com.google.gwt.user.theme.standard.Standard' />
	<!-- <inherits name="com.google.gwt.user.theme.chrome.Chrome"/> -->
	<!-- <inherits name="com.google.gwt.user.theme.dark.Dark"/>     -->

	<!-- Inherit the default GWT style sheet.  You can change       -->
	<!-- the theme of your GWT application by uncommenting          -->
	<!-- any one of the following lines.                            -->
	<stylesheet src="gwt/standard/Mosaic.css" />
	<!-- <stylesheet src="gwt/chrome/Mosaic.css" /> -->
	<!-- <stylesheet src="gwt/dark/Mosaic.css" /> -->

	<!-- Enable debug ID.                                           -->
	<inherits name="com.google.gwt.user.Debug" />
	<set-property name="gwt.enableDebugId" value="true" />

	<!-- Use a generator to create the source code                  -->
	<generate-with
		class="org.gwt.mosaic.showcase.generator.ShowcaseGenerator">
		<when-type-assignable
			class="org.gwt.mosaic.showcase.client.Showcase.GeneratorInfo" />
	</generate-with>

	<!-- Specify the app entry point class.                         -->
	<entry-point class='org.gwt.mosaic.showcase.client.Showcase' />

	<!-- Define the RPC service -->
	<servlet path="/datasource"
		class="org.gwt.mosaic.showcase.server.DataSourceServiceImpl" />

	<!-- Internationalization support. -->
	<extend-property name="locale" values="en" />
	<extend-property name="locale" values="ar" />
	<extend-property name="locale" values="el" />
	<extend-property name="locale" values="fr" />
	<extend-property name="locale" values="zh" />
</module>
