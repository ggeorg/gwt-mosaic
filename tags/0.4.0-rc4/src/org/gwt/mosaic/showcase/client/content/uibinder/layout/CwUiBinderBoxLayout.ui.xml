<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:m='urn:import:org.gwt.mosaic.ui.client'
	xmlns:l='urn:import:org.gwt.mosaic.ui.client.layout' xmlns:f='urn:import:org.gwt.mosaic.forms.client.layout'>

	<l:LayoutPanel ui:field='layoutPanel'>
		<l:BoxLayout orientation='vertical' alignment='center'>
			<l:BoxLayoutData preferredWidth="50%"
				preferredHeight="5em">
				<m:ToolButton text="ToolButton1" />
			</l:BoxLayoutData>
			<l:BoxLayoutData fillWidth="true" decorated="true">
				<g:Button text="Button1" />
			</l:BoxLayoutData>
			<m:ToolButton text="ToolButton2" />
			<l:BoxLayoutData fillWidth="true" fillHeight="true"
				decorated="true">
				<l:LayoutPanel>
					<l:BoxLayout leftToRight="false" alignment="center">
						<l:BoxLayoutData fillHeight="true">
							<g:Button text="Button1" />
						</l:BoxLayoutData>
						<l:BoxLayoutData fillWidth="true" decorated="true">
							<g:Button text="Button2" />
						</l:BoxLayoutData>
						<l:BoxLayoutData fillHeight="true" fillWidth="true">
							<g:Button text="Button3" />
						</l:BoxLayoutData>
					</l:BoxLayout>
				</l:LayoutPanel>
			</l:BoxLayoutData>
		</l:BoxLayout>
	</l:LayoutPanel>

</ui:UiBinder>