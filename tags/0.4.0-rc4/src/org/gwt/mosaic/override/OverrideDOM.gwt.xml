<!--                                                                        -->
<!-- This module is typically inherited via org.gwt.mosaic.override.Override-->
<!--                                                                        -->
<module>
	<inherits name="com.google.gwt.core.Core"/>
	<inherits name="com.google.gwt.user.UserAgent"/>

	<!-- Fall through to this rule is the browser isn't Safari -->
	<replace-with class="org.gwt.mosaic.override.OverrideDOMImpl">
		<when-type-is class="org.gwt.mosaic.override.OverrideDOMImpl"/>
	</replace-with>
	
	<replace-with class="org.gwt.mosaic.override.OverrideDOMImplSafari">
		<when-type-is class="org.gwt.mosaic.override.OverrideDOMImpl"/>
		<when-property-is name="user.agent" value="safari"/>
	</replace-with>
</module>
