<?xml version="1.0" encoding="utf-8" ?>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style type="gwt.mosaic.client.wtk.skin.rhodes.RhodesTextInputUI.MyStyle">
	.outerDiv {
		margin: 0px !important;
		padding: 0px !important;
		border: 0px none !important;
		
		display: table !important;
		overflow: hidden !important;
	}
	.inputDiv {
		margin: 0px !important;
		border: 1px solid gray !important;
		background: inherited;
		color: inherited;
		display: table-cell !important;
		
		vertical-align: middle !important;
		
		padding: 5px;
		
		-moz-box-shadow: inset 0 0 5px gray;
		-webkit-box-shadow: inset 0 0 5px gray;
		box-shadow: inset 0 0 5px gray;
	}
	.focused {
		-moz-box-shadow: inset 0 0 5px orange;
		-webkit-box-shadow: inset 0 0 5px orange;
		box-shadow: inset 0 0 5px orange;
	}
	.input {
		margin: 0px !important;
		padding: 0px !important;
		border: 0px none !important;
		outline: 0px none !important;
		
		width: 100% !important;
	}
	</ui:style>

	<g:HTMLPanel styleName='{style.outerDiv}'>
		<g:HTMLPanel styleName='{style.inputDiv}' ui:field="inputDiv">
			<g:TextBox styleName='{style.input}' ui:field='textBox' />
			<g:PasswordTextBox styleName='{style.input}' ui:field='passwordTextBox' />
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder>