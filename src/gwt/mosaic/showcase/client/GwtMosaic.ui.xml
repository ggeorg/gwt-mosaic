<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:m='urn:import:gwt.mosaic.mobile.client'>

	<ui:with field="res" type="gwt.mosaic.showcase.client.Resources" />

	<ui:style>
		.left {
			background-color: red;
			padding: 20px;
			margin: 20px;
			border: 10px solid blue;
		}
		
		.right {
			background-color: blue;
			padding: 20px;
			margin: 20px;
			border: 10px solid red;
		}
	</ui:style>

	<m:Viewport>
		<m:FixedSplitter orientation="VERTICAL">
			<g:HTMLPanel styleName="{style.left}" height="200px">LEFT</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.right}">RIGHT</g:HTMLPanel>
		</m:FixedSplitter>
	</m:Viewport>

</ui:UiBinder>