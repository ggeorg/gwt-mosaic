<module>

	<!-- Fall through to this rule is the browser isn't Opera -->
	<replace-with
		class="org.mosaic.ui.client.ColumnWidget.MouseResizeWorker">
		<when-type-is
			class="org.mosaic.ui.client.ColumnWidget.MouseResizeWorker" />
	</replace-with>

	<!-- Opera has a different MouseWorker implementation -->
	<replace-with
		class="org.mosaic.ui.client.ColumnWidget.MouseResizeWorkerOpera">
		<when-type-is
			class="org.mosaic.ui.client.ColumnWidget.MouseResizeWorker" />
		<when-property-is name="user.agent" value="opera" />
	</replace-with>



</module>