<!--                                                                        -->
<!-- This module is typically inherited via org.gwt.mosaic.ui.UI            -->
<!--                                                                        -->
<module>
	<inherits name="com.google.gwt.user.UserAgent" />
	<inherits name='org.gwt.mosaic.override.Override' />

	<!-- IE includes spacing and padding when rendering -->
	<replace-with
		class="org.gwt.mosaic.ui.client.table.FixedWidthTableImpl.ImplIE6">
		<when-type-is
			class="org.gwt.mosaic.ui.client.table.FixedWidthTableImpl.Impl" />
		<when-property-is name="user.agent" value="ie6" />
	</replace-with>
	<replace-with
		class="org.gwt.mosaic.ui.client.table.FixedWidthTableImpl.ImplIE8">
		<when-type-is
			class="org.gwt.mosaic.ui.client.table.FixedWidthTableImpl.Impl" />
		<when-property-is name="user.agent" value="ie8" />
	</replace-with>

	<!-- Safari includes spacing and padding when rendering -->
	<replace-with
		class="org.gwt.mosaic.ui.client.table.FixedWidthTableImpl.ImplSafari">
		<when-type-is
			class="org.gwt.mosaic.ui.client.table.FixedWidthTableImpl.Impl" />
		<when-property-is name="user.agent" value="safari" />
	</replace-with>

	<!-- Opera needs to refresh the grid or it won't resize -->
	<replace-with
		class="org.gwt.mosaic.ui.client.table.FixedWidthTableImpl.ImplOpera">
		<when-type-is
			class="org.gwt.mosaic.ui.client.table.FixedWidthTableImpl.Impl" />
		<when-property-is name="user.agent" value="opera" />
	</replace-with>
</module>
